#include <stdio.h>

int main() {
    int tabuleiro[10][10];
    int i, j;

    // Inicializa o tabuleiro com 0 (Ã¡gua)
    for (i = 0; i < 10; i++) {
        for (j = 0; j < 10; j++) {
            tabuleiro[i][j] = 0;
        }
    }

   
    int linhaH = 2, colunaH = 3;
    for (j = 0; j < 3; j++) {
        tabuleiro[linhaH][colunaH + j] = 3;
    }

    
    int linhaV = 5, colunaV = 5;
    for (i = 0; i < 3; i++) {
        tabuleiro[linhaV + i][colunaV] = 3;
    }

    
    for (i = 0; i < 4; i++) {
        tabuleiro[i][i] = 3;
    }

   
    for (i = 1; i < 4; i++) {
        tabuleiro[i][9 - i] = 3;
    }

    
    printf("===== TABULEIRO BATALHA NAVAL =====\n\n");

    for (i = 0; i < 10; i++) {
        for (j = 0; j < 10; j++) {
            printf("%d ", tabuleiro[i][j]);
        }
        printf("\n");
    }

    printf("\nLegenda: 0 = Ãgua ðŸŒŠ | 3 = Navio ðŸš¢\n");

    return 0;
}
