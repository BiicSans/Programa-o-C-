#include <time.h>
#include <stdio.h>
#include <stdlib.h> // sempre inclua para rand() e srand()

int main() {
    int numJogador, numComputador, result = 0;
    char tipoComparacao;

    // Gerar nÃºmero aleatÃ³rio
    srand(time(0));
    numComputador = rand() % 100 + 1; // NÃºmero entre 1 e 100

    // InÃ­cio do jogo
    printf("**Bem-vindo ao Game: Maior, Menor, Igual!!**\n");
    printf("VocÃª precisa escolher um nÃºmero e o tipo de comparaÃ§Ã£o.\n");
    printf("M. Maior\n");
    printf("N. Menor\n");
    printf("I. Igual\n\n");

    printf("Escolha a comparaÃ§Ã£o: ");
    scanf(" %c", &tipoComparacao);

    printf("Digite um nÃºmero de 1 a 100: ");
    scanf("%d", &numJogador);

    // Exibir nÃºmero do computador
    printf("\nO nÃºmero do computador Ã©: %d\n", numComputador);

    switch (tipoComparacao) {
        case 'M':
        case 'm':
            printf("VocÃª escolheu a opÃ§Ã£o MAIOR!\n");
            result = numJogador > numComputador ? 1 : 0; 
            break;

        case 'N':
        case 'n':
            printf("VocÃª escolheu a opÃ§Ã£o MENOR!\n");
            result = numJogador < numComputador ? 1 : 0;
            break;

        case 'I':
        case 'i':
            printf("VocÃª escolheu a opÃ§Ã£o IGUAL!\n");
            result = numJogador == numComputador ? 1 : 0;
            break;

        default:
            printf("OpÃ§Ã£o invÃ¡lida! ðŸ˜•\n");
            return 0;
    }

    printf("\nSeu nÃºmero: %d | Computador: %d\n", numJogador, numComputador);   

    if (result == 1) {
        printf("ðŸŽ‰ **VocÃª VENCEU!** ParabÃ©ns!!! ðŸŽ‰\n");
    } else {
        printf("ðŸ’€ VocÃª perdeu! Tente novamente!\n");
    }

    return 0;
}
