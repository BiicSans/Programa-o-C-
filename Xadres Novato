#include <stdio.h>


int main() {
    int movimentoTorre = 5;   
    int movimentoBispo = 5;   
    int movimentoRainha = 8; 

    int i; 

    
    printf(" Movimento da TORRE \n");
    printf("A Torre vai se mover %d casas para a direita.\n", movimentoTorre);

    for (i = 1; i <= movimentoTorre; i++) {
        printf("Casa %d: Direita\n", i);
    }

    printf("\n"); 

   
    printf("Movimento do BISPO \n");
    printf("O Bispo vai se mover %d casas na diagonal superior direita.\n", movimentoBispo);

    i = 1; 
    while (i <= movimentoBispo) {
        printf("Casa %d: Cima, Direita\n", i);
        i++;
    }

    printf("\n");


    printf(" Movimento da RAINHA \n");
    printf("A Rainha vai se mover %d casas para a esquerda.\n", movimentoRainha);

    i = 1;
    do {
        printf("Casa %d: Esquerda\n", i);
        i++;
    } while (i <= movimentoRainha);

    printf("\nFim de Jogo!\n");
    printf("Todas as peÃ§as se moveram conforme as regras!\n");

    return 0;
}
